        <script>
function update_fecha_fin(cal)
{
  //alert(cal.date);
  document.getElementById("fecha_fin").value = cal.date.print("%Y-%m-%d");
}
Calendar.setup(
{
  inputField :"fecha_ini",
  ifFormat :"%d-%m-%Y",
//   onUpdate : update_fecha_fin,
  button : "f_trigger_c"
}
);
        </script>
        <tr class="row2">
