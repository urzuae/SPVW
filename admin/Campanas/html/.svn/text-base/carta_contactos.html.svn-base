    <script>
function capsall(theForm)
{
  var els = theForm.elements; for(i=0; i<els.length; i++)
  {
    switch(els[i].type)
    {
      case "text":
      if (els[i].name == "email") break;
      els[i].value= els[i].value.toUpperCase();
      break;
      /*case "textarea":
      if (els[i].name == "email") break;
      els[i].value= els[i].value.toUpperCase();
      break;*/
    }
  }
}
